# Verify authentication support per service where user session is identified
# by cookie.
#
# The test assigns "authentication application", to a service and
# checks if default permissions allow to access all object under
# the service that require autnetication.
#
#
--source include/have_router.inc

--let $extra_mrs_router_id=1
--source ../include/predefined_setup/configure_router_mrs_root.inc
--source ../include/schema/basic_schema.sql

CREATE USER 'u1'@'%' IDENTIFIED BY 'p1';
CREATE USER 'u2'@'%' IDENTIFIED BY 'p2';
CREATE USER 'u3'@'%' IDENTIFIED BY 'p3';


## Test starts here
--echo
--echo
--echo ## I. Create servcices that have basic-mysql authentication:
--echo #
--echo ## II. Limit the hosts 
--echo #

--echo
--echo #
--echo # I.1

--source ../include/mrs/start_object_definition.inc

--let $mrs_add_service_path="/svc1"
--let $mrs_add_host_name=""
--let $mrs_add_service_options='{"logging":{"exceptions":true, "request":{"headers":true, "body":true}, "response":{"headers":true, "body":true}}}'
--source ../include/mrs/service/add.inc


--let $mrs_add_schema=basic_schema
--let $mrs_add_schema_path=/basic1
--let $mrs_add_schema_auth=TRUE
--source ../include/mrs/db_schema/add.inc

--let $mrs_add_db_object=table1
--let $mrs_add_db_object_path=/o1
--source ../include/mrs/db_object/add.inc

--let $mrs_add_auth_app=default authentication
--let $mrs_add_auth_vendor=MySQL Internal
--let $mrs_add_auth_service=/svc1
--source ../include/mrs/add_auth_app.inc

UPDATE  `mysql_rest_service_metadata`.`config` SET data=
  '{"authentication":{"throttling":{"perAccount":{"minimumTimeBetweenRequestsInMs":2000,"maximumAttemptsPerMinute":5}}}}'; 

--source ../include/mrs/end_object_definition.inc


--echo
--echo #
--echo # II.1
--source ../include/mrs/changes/fetch_object.inc

exec $MRS_CLIENT_ARGS
  --expected-status Unauthorized
  --path /svc1/basic1/o1;


exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u1
  -p p1
  --session-file $MYSQL_TMP_DIR/user1_session.dat;

# Different users may access the server one after another.
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --session-file $MYSQL_TMP_DIR/user2_1_session.dat;
  

# Same users must wait with the next request
# Missing waiting between requests, because of that the authentication
# is going to fails wiht status 429.
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --expected-status 429
  --session-file $MYSQL_TMP_DIR/user2_2_session.dat;

# Waiting 3 seconds removed the 2s limit
--sleep 3
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --session-file $MYSQL_TMP_DIR/user2_3_session.dat;

# Waiting 3 seconds removed the 2s limit
--sleep 3
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --session-file $MYSQL_TMP_DIR/user2_4_session.dat;
  
# Waiting 3 seconds removed the 2s limit
--sleep 3
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --session-file $MYSQL_TMP_DIR/user2_5_session.dat;

# Waiting 3 seconds removed the 2s limit
# still in this case we have reached the max limit which is 5.
--sleep 3
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --expected-status 429
  --session-file $MYSQL_TMP_DIR/user2_6_session.dat;
  
# The host has been blocked, we need to wait 60 seconds,
# anyway u3 may connect !
--sleep 6
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u3
  -p p3
  --session-file $MYSQL_TMP_DIR/user3_session.dat;
  
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --expected-status 429
  --session-file $MYSQL_TMP_DIR/user2_7_session.dat;

# The host has been unblocked
--sleep 55
exec $MRS_CLIENT_ARGS
  -a BASIC
  --path /svc1/authentication/login
  -u u2
  -p p2
  --session-file $MYSQL_TMP_DIR/user2_8_session.dat;


# Cleanup
DROP USER 'u1'@'%';
DROP USER 'u2'@'%';
DROP USER 'u3'@'%';


remove_file $MYSQL_TMP_DIR/user1_session.dat;
remove_file $MYSQL_TMP_DIR/user2_1_session.dat;
remove_file $MYSQL_TMP_DIR/user2_2_session.dat;
remove_file $MYSQL_TMP_DIR/user2_3_session.dat;
remove_file $MYSQL_TMP_DIR/user2_4_session.dat;
remove_file $MYSQL_TMP_DIR/user2_5_session.dat;
remove_file $MYSQL_TMP_DIR/user2_6_session.dat;
remove_file $MYSQL_TMP_DIR/user2_7_session.dat;
remove_file $MYSQL_TMP_DIR/user2_8_session.dat;
remove_file $MYSQL_TMP_DIR/user3_session.dat;
--source ../include/mrs/cleanup.inc
